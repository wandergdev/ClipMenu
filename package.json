{
  "name": "clipmenu",
  "version": "0.1.0",
  "description": "Clipboard history for macOS (cmd + Shift + V)",
  "author": "Wander Genao",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.wandergenao.clipmenu",
    "productName": "ClipMenu",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "dist/icon.icns",
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "dmg": {
    "contents": [
      { "x": 130, "y": 220, "type": "file" },
      { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
    ]
  },
    "asar": true
  },
  "devDependencies": {
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6"
  }
}
